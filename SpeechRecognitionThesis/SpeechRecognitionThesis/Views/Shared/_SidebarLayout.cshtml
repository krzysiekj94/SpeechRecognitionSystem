<div class="sidebar-header">
    <center>
        <h3>Menu główne</h3>
    </center>
</div>

<ul class="list-group">
    <p class="list-group-item active sidebar-element">Lista dostępnych opcji</p>
    <a href="/articles/newest" class="list-group-item sidebar-element">Najnowsze artykuły</a>
    <a href="/articles/top-5" class="list-group-item sidebar-element">Top 10 artykułów</a>
    <a href="/search" class="list-group-item sidebar-element">Wyszukiwarka artykułów</a>
    <a href="/articles/add" class="list-group-item sidebar-element">Dodaj nowy artykuł</a>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="/articles/my" class="list-group-item sidebar-element">Moje artykuły</a>
        <a href="/account" class="list-group-item sidebar-element">Moje konto</a>
        <a href="/logout" class="list-group-item sidebar-element">Wyloguj</a>
    }
    else
    {
        <a href="/login" class="list-group-item sidebar-element">Zaloguj się!</a>
        <a href="/register" class="list-group-item sidebar-element">Rejestracja</a>
    }
</ul>

<div class="row show-speech-commands-row text-center">
    <button class="show-commands-button btn btn-success">
        <i class="show-speech-command-icon glyphicon glyphicon-music"></i>
        &nbsp; <span class="show-speech-command-text">Pokaż komendy głosowe</span> &nbsp;
        <i class="show-speech-command-icon glyphicon glyphicon-music"></i>
    </button>
